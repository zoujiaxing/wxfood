/* pages/list/list.wxss */
.main{
  height:100%;
}
.head-img image{
  width:100%;
  height:400rpx;
}
.list-box{
  padding:30rpx 20rpx;
}
.list-box .list-detail{
  display: inline-block;
  width:347rpx;
  height:347rpx;
  background:#f5f6f5;
  margin:0 15rpx 10px 0;
  text-align: center;
  border-radius: 10rpx;

}
.list-box .list-detail:nth-child(2n){
  margin-right: 0;
}
.list-box .list-detail image{
  width:180rpx;
  height:180rpx;
  margin:30rpx 0 20rpx;
}
.list-box .list-detail text{
  font-size:32rpx;
  line-height: 45rpx;
}
/* pages/cart/cart.wxss */
.cart-box{
  
}
.cart-list{
  position:relative;
  padding:20rpx 20rpx 20rpx 285rpx;
  height:185rpx;
  border:1rpx solid #e9e9e9; 
}
.cart-list .cart-select{
  position:absolute;
  left:20rpx;
  top:90rpx;
  width:45rpx;
  height:45rpx;
}
.cart-list image{
  position:absolute;
  left:85rpx;
  top:20rpx;
  width:185rpx;
  height:185rpx;
}
.cart-list .cart-title{
  display:inline-block;
  width:300rpx;
  height:105rpx;
  line-height: 50rpx;
  overflow: hidden;
}
.cart-list .cart-price{
  display:inline;
  height: 105rpx;
  float: right;
  line-height: 50rpx;
}
.cart-list .cart-var{
  position: absolute;
  left: 285;
  bottom: 20rpx;
  width: 250rpx;
  height: 80rpx;
}
.cart-list .cart-var text{
  display:inline-block;
  line-height: 80rpx;
  text-align: center;
}
.cart-list .cart-var text:first-child{
  width:50rpx;
  height:100%;
  font-size:44rpx;
}
.cart-list .cart-var text:nth-child(2){
  width:150rpx;
}
.cart-list .cart-var text:last-child{
  width:50rpx;
  height:100%;
  font-size:44rpx;
}
.cart-del{
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 44rpx;
}

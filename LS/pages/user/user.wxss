.header{
  position:relative;
  height:160rpx;
  line-height: 100rpx;
  padding:30rpx 30rpx 30rpx 150rpx;
  background:#AB956D;
  font-size:28rpx;
  color:#fff;
  box-sizing: border-box;
}
.header image{
  position: absolute;
  left: 30rpx;
  top: 30rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.header text:last-child{
  float: right;
}

/*address*/
.address-box{
  border-bottom:20rpx solid #ededed;
  line-height: 90rpx;
  color:#999;
  font-size:28rpx;
}
.address-box .address-msg{
  position:relative;
  height:90rpx;
  border:1rpx solid #e9e9e9;
  text-align: center;
}
.address-box .address-msg::after{
  position: absolute;
  right: 30rpx;
  top: 34rpx;
  content: '';
  width: 16rpx;
  height: 16rpx;
  border-top: 4rpx solid #7f7f7f;
  border-right: 4rpx solid #7f7f7f;
  transform: rotate(45deg);
}
.address-box .address-list{
  margin-left:30rpx;
}
.address-box .address-list view{
  height:90rpx;
  border-bottom:1rpx solid #e9e9e9;
}
.address-box .address-list view:last-child{
   border-bottom:none;
}

/* order-box */
.order-box{
  color:#999;
  font-size:28rpx;
}
.order-box .order{
  height:90rpx;
  line-height: 90rpx;
  text-align: center;
  border-bottom:1rpx solid #e9e9e9;
}
.order-list{
  margin-left:30rpx;
}
.order-list .order-title{
  height:90rpx;
  line-height: 90rpx;
  border-bottom:1rpx solid #e9e9e9;
}
.order-list .order-thumb{
  position: relative;
  height:120rpx;
  padding:35rpx 20rpx 35rpx 170rpx;
  border-bottom:1rpx solid #e9e9e9;
}
.order-list .order-thumb image{
  position: absolute;
  left:0;
  top:20rpx;
  width:150rpx;
  height:150rpx;
}
.order-list .order-thumb view{
  line-height: 60rpx;
}
.order-list .order-thumb text{
  position: absolute;
  right:20rpx;
  top:35rpx;
  height:120rpx;
  line-height: 120rpx;
  color:#b42f2d;
}
.order-pay{
  height:60rpx;
  line-height: 60rpx;
  color:#2f2f2f;
  padding:15rpx 30rpx 15rpx 0;
}
.order-pay .btn{
  float:right;
  width:170rpx;
  height:60rpx;
  line-height: 60rpx;
  background:#b42f2d;
  color:#fff;
}
